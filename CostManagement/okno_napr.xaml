<Window x:Class="CostManagement.okno_napr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista napraw" MinHeight="200" MinWidth="400" Height="200" Width="400">
    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="NAPRAWY :"   Background="#FFE4F141"  Padding="30,5,5,5" />
            <DataGrid x:Name="dg_napr" MinHeight="100" ItemsSource="{Binding Source=list}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data naprawy" Binding="{Binding DateOfRepair}"/>
                    <DataGridTextColumn Header="Koszt" Binding="{Binding Cost}"/>
                    <DataGridTextColumn Header="Opis" Binding="{Binding Specification}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Name="Edit" Content="Modyfikuj" Width="100"/>
        </StackPanel>
    </ScrollViewer>
</Window>
